<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="account_invoice_wizard2_view">
			<field name="name">account.invoice.wizard2.form</field>
			<field name="model">account.invoice.wizard2</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Assistant de génération de factures client">
					<group>
					   <field name="partner_id" invisible="1"/>
						<field name="journal_id" invisible="1"/>
						<field name="invoice_id" invisible="1"/>
					</group>
					<footer>
                    	<button string="Générer"
                                name="create_invoice"
                                type="object"
                                class="oe_highlight" />
                        	or
                      	<button string="Cancel"
                                class="oe_link"
                                special="cancel" />
					</footer>
				</form>
			</field>
		</record>

   		<act_window id="account_invoice_wizard2_action"
            name="Assistant facture client"
            res_model="account.invoice.wizard2"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            />

	</data>
</openerp>