<?xml version="1.0"?>
<odoo>
    <data>
  	<!-- ========================== agence_agence =============================== -->
	    <record model="ir.ui.view" id="agence_agence_form">
			<field name="name">agence.agence.form</field>
			<field name="model">agence.agence</field>
			<field name="type">form</field>
			<field name="priority" eval="1"/>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
						</group>
						<notebook>
							<page string="Secteurs">
								<field name="secteur_ids" />
							</page>
							<page string="Utilisateurs">
								<field name="user_ids" nolabel="1" readonly="1">
							    	<tree>
                    					<field name="name"/>
                    					<field name="login"/>
                    					<field name="lang"/>
                    					<field name="login_date"/>
                					</tree>
								</field>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

	    <record model="ir.ui.view" id="agence_agence_form2">
			<field name="name">agence.agence.form.2</field>
			<field name="model">agence.agence</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
							<field name="secteur_ids" widget="many2many_tags"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

	    <record model="ir.ui.view" id="agence_agence_tree">
			<field name="name">agence.agence.tree</field>
			<field name="model">agence.agence</field>
			<field name="type">tree</field>
			<field name="priority" eval="1"/>
			<field name="arch" type="xml">
				<tree>
					<field name="code" />
					<field name="name" />
					<field name="secteur_ids" widget="many2many_tags"/>
				</tree>
			</field>
		</record>

	    <record model="ir.ui.view" id="agence_agence_tree2">
			<field name="name">agence.agence.tree.2</field>
			<field name="model">agence.agence</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="code" />
					<field name="name" />
					<field name="secteur_ids" widget="many2many_tags"/>
				</tree>
			</field>
		</record>

	    <record model="ir.ui.view" id="agence_agence_search">
			<field name="name">agence.agence.search</field>
			<field name="model">agence.agence</field>
			<field name="type">search</field>
			<field name="arch" type="xml">
				<search>
					<field name="code" />
					<field name="name" />
					<field name="secteur_ids" />
				</search>
			</field>
		</record>

  	<!-- ========================== secteur_secteur =============================== -->

	    <record model="ir.ui.view" id="secteur_secteur_form">
			<field name="name">secteur.secteur.form</field>
			<field name="model">secteur.secteur</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="code" />
							<field name="name" />
						</group>
						<notebook>
							<page string="Agences">
								<field name="agence_ids">
									<tree>
										<field name="code"/>
										<field name="name"/>
									</tree>
									<form>
										<group>
											<field name="code" />
											<field name="name" />
										</group>
									</form>									
								</field>
							</page>
							<page string="Utilisateurs">
								<field name="user_ids" nolabel="1" readonly="1">
							    	<tree>
                    					<field name="name"/>
                    					<field name="login"/>
                    					<field name="lang"/>
                    					<field name="login_date"/>
                					</tree>
								</field>
							</page>							
						</notebook>
					</sheet>
				</form>
			</field>
		</record>

	    <record model="ir.ui.view" id="secteur_secteur_tree">
			<field name="name">secteur.secteur.tree</field>
			<field name="model">secteur.secteur</field>
			<field name="type">tree</field>
			<field name="arch" type="xml">
				<tree>
					<field name="code" />
					<field name="name" />
					<field name="agence_ids" />
				</tree>
			</field>
		</record>
        <record id="view_users_form" model="ir.ui.view">
            <field name="name">res.users.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form" />
            <field name="arch" type="xml">
            	<field name="tz_offset" position="after">
            		<field name="secteur_id"/>
            		<field name="agence_id"/>
            	</field>
            </field>
        </record>

        <record id="view_users_tree" model="ir.ui.view">
            <field name="name">res.users.tree</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree" />
            <field name="arch" type="xml">
            	<field name="lang" position="after">
            		<field name="secteur_id"/>
            		<field name="agence_id"/>
            	</field>
            </field>
        </record>


        <record id="base_vat.view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.vat.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="property_account_position_id" position="after">
                    <label for="vat" invisible="1"/>
                    <div name="vat_info" class="o_row">
                        <field name="vat" placeholder="e.g. BE0477472701" invisible="1"/>
                    </div>
                </field>
            </field>
        </record>
    
        <record id="view_partner_property_form" model="ir.ui.view">
            <field name="name">res.partner.property.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
            	<field name="property_account_position_id" position='attributes'>
            		<attribute name='string'>Domaine de TVA</attribute>
            	</field>
            	<field name="credit" position='attributes'>
            		<attribute name='string'>Total dû client</attribute>
            	</field>
            	<field name="debit" position='attributes'>
            		<attribute name='string'>Total dû fournisseur</attribute>
            	</field>
				<page name="accounting" position="after">    
					<page string="Autres comptes">
						<field name="other_account_ids" nolabel="1">
							<tree editable="bottom">
								<field name="sequence" string="Ordre" />
								<field name="type_facture_id" />
								<field name="name" />
								<field name="mode_reglement" />
								<field name="echeance" />
								<field name="account_id" />
								<field name="supplier_account_id"/>
								<field name="modifiable" />
							</tree>
						</field>
					</page>
				</page>
			</field>
        </record>

		<record id="view_partner_property_form2" model="ir.ui.view">
    		<field name="name">account_partner_payment.partner_form</field>
    		<field name="model">res.partner</field>
    		<field name="inherit_id" ref="account_payment_partner.view_partner_property_form" />
    		<field name="arch" type="xml">
        		<field name="customer_payment_mode_id" position="attributes">
        			<attribute name="string">Moyen de paiement client</attribute>
        		</field>
        		<field name="supplier_payment_mode_id" position="attributes">
        			<attribute name="string">Moyen de paiement fournisseur</attribute>
        		</field>        		
    		</field>
		</record>
		
        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority" eval="1" />
            <field name="arch" type="xml">
            	<form position="replace">
                <form string="Partners">
                <sheet>
            		<table style="width:100%;">
            			<tr>
            				<td width="35%">
                				<label for="ref" string='ID :'/>
                               	<div>
                                    <field name="ref" class="oe_inline"/>
                                </div>
            				</td>
            				<td width="25%">
                				<label for="company_type" string='Type:'/>
                               	<div>
                                    <field name="company_type" class="oe_inline"/>
                                </div>
            				</td>
            				<td width="25%">
                				<label for="title" string='Type de société :' attrs="{'invisible':[('company_type','=','person')]}"/>
                               	<div>
                                    <field name="title" class="oe_inline" attrs="{'invisible':[('company_type','=','person')]}" options='{"no_open": True}' domain="[('company_type','=',company_type)]" context="{'default_company_type':company_type}"/>
                                </div>
                				<label for="title2" string='Titre :' attrs="{'invisible':[('company_type','!=','person')]}"/>
                               	<div>
                                    <field name="title2" class="oe_inline" attrs="{'invisible':[('company_type','!=','person')]}" options='{"no_open": True}' domain="[('company_type','=',company_type)]" context="{'default_company_type':company_type}"/>
                                </div>
            				</td>
            				<td width="15%">
                				<label for="actif" string='Actif :'/>
                               	<div>
                                    <field name="actif" class="oe_inline"/>
                                </div>
            				</td>            				
            			</tr>
            		</table> 
                    <div class="oe_button_box" name="button_box">
                        <button invisible="1" name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                		<button name="return_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-book"
                            context="{'xml_id':'fleet_vehicle_contract_act'}"
                            help="show the contract for this vehicle">
                            <field name="contract_count" widget="statinfo" string="Contrats CD"/>
                		</button>
                		<button name="return_action_to_open"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-book"
                            context="{'xml_id':'fleet_vehicle_contract_lld_act'}"
                            help="show the contract for this vehicle">
                            <field name="contract_count_lld" widget="statinfo" string="Contrats LD"/> 
                        </button>                       
                    </div>
                    <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium", "size": [90, 90]}'/>
                    <div class="oe_title">
                        <field name="is_company" invisible="1"/>
                        <field name="commercial_partner_id" invisible="1"/>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                        </h1>
                        <div class="oe_edit_only">
                        	<label for="name2" attrs="{'invisible':[('company_type','!=','person'),('driver','=',False)]}"/>
                        </div>
                        <field name="name2" attrs="{'invisible':[('company_type','!=','person'),('driver','=',False)]}"/>                        
                        <div class="o_row">
                            <field name="parent_id"
                                placeholder="Société"
                                context="{'default_is_company': True, 'default_supplier': supplier, 'default_customer': customer}"
                                />
<!--                             <field name="parent_id"
                                placeholder="Société"
                                domain="[('is_company', '=', True)]" context="{'default_is_company': True, 'default_supplier': supplier, 'default_customer': customer}"
                                attrs="{'invisible': ['|', '&amp;', ('is_company','=', True),('parent_id', '=', False),('company_name', '!=', False),('company_name', '!=', '')]}"/> -->
                                <field name="company_name" attrs="{'invisible': ['|', '|', ('company_name', '=', False), ('company_name', '=', ''), ('is_company', '=', True)]}"/>
                                <button name="create_company" type="object" string="Create company" class="btn btn-sm oe_edit_only fa fa-external-link btn btn-link " attrs="{'invisible': ['|', '|', ('is_company','=', True), ('company_name', '=', ''), ('company_name', '=', False)]}"/>
                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="type" attrs="{'invisible': [('parent_id','=', False)]}" groups="base.group_no_one"/>
                             <field name="partner_balance"/>
                            <label for="street" string="Adresse"/>
                            <div class="o_address_format">
                                <div class="oe_edit_only">
                                    <button name="open_parent" type="object" string="(edit)" class="oe_link"
                                        attrs="{'invisible': ['|', ('parent_id', '=', False), ('type', '!=', 'contact')]}"/>
                                </div>
                                <field name="street" placeholder="Rue..." class="o_address_street"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="street2" placeholder="Rue 2..." class="o_address_street"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="city" placeholder="City" class="o_address_city"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="state_id" class="o_address_state" placeholder="Etat" options='{"no_open": True}'
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" context="{'country_id': country_id, 'zip': zip}" invisible="1"/>
                                <field name="zip" placeholder="Code postal" class="o_address_zip"
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                                <field name="country_id" placeholder="Pays" class="o_address_country" options='{"no_open": True, "no_create": True}'
                                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                            </div>
                            <field name="website" widget="url" placeholder="ex : www.societe.com"/>
                            <field name="category_id" widget="many2many_tags" placeholder="Etiquettes..." options="{'no_create_edit': True}" invisible="1"/>
                        </group>
                        <group>
                            <field name="function" placeholder="e.g. Sales Director"
                                attrs="{'invisible': [('is_company','=', True)]}"/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="fax"/>
                            <field name="user_ids" invisible="1"/>
                            <field name="email" widget="email" attrs="{'required': [('user_ids','!=', [])]}"/>
                        </group>
                    </group>

                    <notebook colspan="4">
                        <page string="Contacts &amp; Adresses" autofocus="autofocus">
                            <field name="child_ids" mode="kanban" context="{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_supplier': supplier, 'default_customer': customer, 'default_lang': lang,}">
                                <kanban>
                                    <field name="color"/>
                                    <field name="name"/>
                                    <field name="name2"/>
                                    <field name="title"/>
                                    <field name="type"/>
                                    <field name="email"/>
                                    <field name="parent_id"/>
                                    <field name="is_company"/>
                                    <field name="function"/>
                                    <field name="phone"/>
                                    <field name="street"/>
                                    <field name="street2"/>
                                    <field name="zip"/>
                                    <field name="city"/>
                                    <field name="country_id"/>
                                    <field name="mobile"/>
                                    <field name="fax"/>
                                    <field name="state_id"/>
                                    <field name="image"/>
                                    <field name="lang"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                            <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                                <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right"/>
                                                <div class="o_kanban_image">
                                                    <img t-if="record.image.raw_value" t-att-src="'data:image/png;base64,'+record.image.raw_value"/>
                                                    <t t-if="!record.image.raw_value">
                                                        <img t-if="record.type.raw_value === 'delivery'" t-att-src='_s + "/base/static/src/img/truck.png"'/>
                                                        <img t-if="record.type.raw_value === 'invoice'" t-att-src='_s + "/base/static/src/img/money.png"'/>
                                                        <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                                                            <img t-if="record.is_company.raw_value === true" t-att-src='_s + "/base/static/src/img/company_image.png"'/>
                                                            <img t-if="record.is_company.raw_value === false" t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                                        </t>
                                                    </t>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <field name="name"/>
                                                    <field name="name2" />
                                                    <div t-if="record.function.raw_value"><field name="function"/></div>
                                                    <div t-if="record.email.raw_value"><field name="email"/></div>
                                                    <div t-if="record.type.raw_value != 'contact'">
                                                        <div>
                                                            <field name="zip"/>
                                                            <field name="city"/>
                                                        </div>
                                                        <field t-if="record.state_id.raw_value" name="state_id"/>
                                                        <field name="country_id"/>
                                                    </div>
                                                    <div t-if="record.phone.raw_value">Phone: <field name="phone"/></div>
                                                    <div t-if="record.mobile.raw_value">Mobile: <field name="mobile"/></div>
                                                    <div t-if="record.fax.raw_value">Fax: <field name="fax"/></div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form string="Contact / Address">
                                    <sheet>
                                        <field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
                                        <hr/>
                                        <group attrs="{'invisible': [('type','=', 'contact')]}">
                                        	<group>
                                        		<field name="actif" />
                                        	</group>
                                        	<group>
                                        		<field name="sequence" />
                                        	</group>
                                        </group>
                                        <group>
                                            <group attrs="{'invisible': [('type','=', 'contact')]}">
                                                <label for="street" string="Adresse"/>
                                                <div>
                                                    <div class="o_address_format" name="div_address">
                                                        <field name="street" placeholder="Street..." class="o_address_street"/>
                                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                                        <field name="city" placeholder="City" class="o_address_city"/>
                                                        <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                                                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                                        <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                                    </div>
                                                </div>
                                            </group>
                                            <group>
                                                <field name="name" string="Nom" required="1"/>
                                                <field name="name2" />
                                                <field name="direct" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                                <field name="title" placeholder="e.g. Mr."
                                                    attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                                <field name="function" placeholder="e.g. Sales Director"
                                                    attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                                <field name="email"/>
                                                <field name="phone" widget="phone"/>
                                                <field name="mobile" widget="phone"/>
                                            </group>
                                        </group>
                                        <group>
                                        	<group>
                                        		<field name="date_start" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                        		<field name="partner_latitude" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                        		<field name="user_id" />
                                        	</group>
                                        	<group>
                                        		<field name="date_end" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                        		<field name="partner_longitude" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                        		<field name="comment" placeholder="Note interne..."/>
                                        	</group>
                                        </group>
                                        <div attrs="{'invisible': [('type','=', 'contact')]}">
                                        	<field name="contact_line_ids">
                                        		<tree editable="top">
                                        			<field name="type" />
                                        			<field name="num_addr" />
                                        			<field name="name" />
                                        		</tree>
                                        	</field>
                                        </div>
                                        <field name="supplier" invisible="True"/>
                                        <field name="customer" invisible="True"/>
                                        <field name="lang" invisible="True"/>
                                        <field name="image" invisible="True"/>
                                    </sheet>
                                </form>
                            </field>
                        </page>
            			<page string="Autres adresses">
							<field name="contact_ids">
								<tree>
									<field name="actif" />
									<field name="sequence" string="Ordre" />
									<field name="type" />
									<field name="name" />
									<field name="street" />
									<field name="street2" />
				    				<field name="zip" />
									<field name="city_id" />
		    					</tree>
                                <form string="Création d'adresse">
                                    <sheet>
                                        <field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
                                        <hr/>
                                        <group attrs="{'invisible': [('type','=', 'contact')]}">
                                        	<group>
                                        		<field name="actif" />
                                        	</group>
                                        	<group>
                                        		<field name="sequence" />
                                        	</group>
                                        </group>
                                        <group>
                                            <group attrs="{'invisible': [('type','=', 'contact')]}">
                                                <label for="street" string="Adresse"/>
                                                <div>
                                                    <div class="o_address_format" name="div_address">
                                                        <field name="street" placeholder="Rue..." class="o_address_street"/>
                                                        <field name="street2" placeholder="Rue 2..." class="o_address_street"/>
                                                        <!-- <field name="zipcode_id" placeholder="Recherche..." />   --> 
                                                        <field name="zip" placeholder="Code postal" class="o_address_zip"/>
                                                        <field name="city_id" placeholder="Ville" class="o_address_city" context="{'country_id': country_id, 'zip': zip}"/>
                                                        <field name="country_id" placeholder="Pays" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                                    </div>
                                                </div>
                                            </group>
                                            <group>
                                                <field name="name" string="Nom" required="1"/>
                                                <field name="direct" attrs="{'invisible': [('type','=', 'contact')]}"/>
                                                <field name="title" placeholder="e.g. Mr."
                                                    attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                                <field name="function" placeholder="e.g. Sales Director"
                                                    attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                                <field name="email"/>
                                                <field name="phone" widget="phone"/>
                                                <field name="mobile" widget="phone"/>
                                            </group>
                                        </group>
                                        <group>
                                        	<group>
