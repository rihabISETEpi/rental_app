<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record model="ir.ui.view" id="purchase_order_wizard_view">
			<field name="name">purchase.order.wizard.form</field>
			<field name="model">purchase.order.wizard</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Assistant de génération de bons d'achat">
					<group>
						<field name="type_facture_id" />
				    	<field name="mro_id" invisible="1"/>
				    </group>
				    <footer>
                        	<button string="Créer"
                                name="create_order"
                                type="object"
                                class="oe_highlight" />
                        	or
                        	<button string="Cancel"
                                class="oe_link"
                                special="cancel" />
					</footer>
				</form>
			</field>
		</record>
   		<act_window id="action_purchase_order_wizard"
            name="Commande d'achat"
            src_model="mro.order"
            res_model="purchase.order.wizard"
            view_type="form" view_mode="form"
            key2="client_action_multi" target="new"
            />

	</data>
</openerp>