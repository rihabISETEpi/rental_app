<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
<template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">
	<xpath expr="//div[@class='page']/div[position()=3]" position="replace">
            <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total HT</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Montant TVA</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax" t-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total TTC</strong></td>
                            <td class="text-right">
                                 <span t-field="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
	</xpath>
	
	<xpath expr="//div[@class='page']/div[position()=4]" position="replace">
		<div class="row" t-if="o.tax_line_ids">
                <div class="col-xs-6">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Taxes</th>
                                <th class="text-right">Base de calcul</th>
                                <th class="text-right">Montant</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.tax_line_ids" t-as="t">
                                <td><span t-field="t.tax_id.description"/></td>
                                <td class="text-right">
                                    <span t-field="t.base"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                                <td class="text-right">
                                    <span t-field="t.amount" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
    	</div>
	</xpath>
	
	<xpath expr="//div[@class='page']/p[position()=2]" position="after">
            <p t-if="o.payment_mode_id">
            	<strong>Moyen de r√®glement :</strong>
                <span t-field="o.payment_mode_id.name"/>
            </p>	
	</xpath>
	
</template>
</data>
</odoo>
